<div>
  <div>
    <h1>
      List of all users
    </h1>
  </div>
</div>

<hr>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          Username
        </th>
    
        <th>
          Private?
        </th>

        <th></th>

        <th></th>

      </tr>

      <% @list_of_users.each do |a_user| %>
      <tr>

        <td><%= a_user.username %></td>
        
         <td>
         <% if a_user.private %> Yes
         <% else %> No
         <% end %>
         </td>

      <td>
        <form action="/insert_followrequest" method="post">
        <input type="hidden" name="query_recipient_id" value="91">
        <button>Follow</button>
        </form>
      
      </td>

      <td><a href="/users/<%= a_user.id %>">Show details</a></td>
      
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
