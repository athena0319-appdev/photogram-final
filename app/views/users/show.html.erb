<div>
  <div>
    <h1>
      <%= @the_user.username %>
    </h1>
 
 <dt>Private</dt>
  <dd><%= @the_user.private %></dd>

<dt>Followers</dt>
    <dd>
      <%= @the_user.followers.count %>
    </dd>

    </div>

  <h4>Pending follow requests</h4>
        <dd>

      <% if session.fetch(:user_id)!=nil %>
        <% if session.fetch(:user_id)!= @the_user.id %>
          <% follow_request = FollowRequest.where({:recipient_id => @the_user.id, :sender_id => session.fetch(:user_id)}).at(0)%>
          <% if follow_request!=nil%>
            <% if follow_request.status == "pending" %>
              Request sent. <a href="/cancel_follow_request/<%= follow_request.id%>">Cancel</a>
            <% else%>
              <a href="/delete_follow_request/<%= follow_request.id%>">Unfollow</a>
            <% end%>
          <% else%>
            <form action="/insert_follow_request" method="post">
                  <input type="hidden" name="query_recipient_id" value="<%= @the_user.id%>">
                  <input type="hidden" name="query_sender_id" value="<%= session.fetch(:user_id)%>">
                  <button>
                    Follow
                  </button>
            </form>
          <% end%>
        <% end%>
      <% end %>
    </dd>
 
   <dt>Following</dt>
  <dd> <%= @the_user.following.count %> </dd>

<% if session.fetch(:user_id)== @the_user.id %>
<dt>Edit user</dt>

    <form action="/modify_user/<%=@the_user.id%>"  method="post" >
     
   
        <label for="username_box">
          Username
        </label>

        <input type="text" id="username_box" name="query_username" value="<%= @the_user.username %>">
    

 
        <input type="checkbox" id="private_box" name="query_private" value="1" <%= "checked" if @the_user.private %>>

        <label for="private_box">
            Private
        </label>
   
      <button>
        Update user
      </button>
    </form>  
<% else %>
<% end %>
<div>
<ul>
  <li><a href="/users/ <%= @the_user.id %>">Profile</a></li>
  <li><a href="/users/<%= @the_user.username %>/liked_photos">Liked photos</a></li>
  <li><a href="/users/<%= @the_user.username %>/feed">Feed</a></li>
  <li><a href="/users/<%= @the_user.username %>/discover">Discover</a></li>
</ul>
</div>



  <h2>Own photos (<%= @the_user.photos.count%>)</h2>

  <table border="1">
  <tr>
<tr>
    <th>
      Image
    </th>

    <th>
      Owner
    </th>

    <th>
      Caption
    </th>

    <th>
      Posted
    </th>

    <th>
      Likes
    </th>

    <th></th>
  </tr>
  <dd><% @the_user.own_photos.each do |a_photo| %></dd>
 
        <tr>
        <td>
          <img src="<%= a_photo.image %>">
        </td>

<td>
          <%= a_photo.owner_id %>
        </td>

        <td>
          <%= a_photo.caption %>
        </td>

 <td>
          <%= time_ago_in_words(a_photo.created_at) %> ago
        </td>
        

        <td>
          <%= a_photo.likes_count %>
        </td>
        
        <td>
          <a href="/photos/<%= a_photo.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
     
  </div>
</div>

<hr>
